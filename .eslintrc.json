{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "settings": {
    "node": {
      "allowModules": [],
      "resolvePaths": [],
      "tryExtensions": [
        ".js",
        ".json",
        ".node"
      ]
    }
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "key-spacing": [
      "warn",
      {
        "align": "colon"
      }
    ],
    "operator-linebreak": [
      "warn",
      "before"
    ],
    "multiline-ternary": [
      "warn",
      "always-multiline"
    ],
    "max-len": [
      "error",
      100,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": false,
        "ignoreTemplateLiterals": false
      }
    ]
  }
}